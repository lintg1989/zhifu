    <!-- 按钮样式，无阴影，白色字体，字号-->
    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <!-- 镂空按钮样式，无阴影，蓝色字体，字号-->
    <style name="ButtonThemeStroke" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/button_bg_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_selector_stroke</item>
    </style>

    <!-- 普通文字样式/暗色-->
    <style name="TextContentDark">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="CardPhoto">
        <item name="android:layout_margin">15px</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">558px</item>
    </style>

    <!-- 普通文字样式/淡色-->
    <style name="TextContentLight">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <!-- 小票详情页文字样式/暗色-->
    <style name="TextPosDetailDark">
        <item name="android:textSize">@dimen/text_size_content_small</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <!-- 小票详情页文字样式/淡色-->
    <style name="TextPosDetailLight">
        <item name="android:textSize">@dimen/text_size_content_small</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <!-- 输入框文字样式-->
    <style name="TextContentEdit">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorHint">@color/text_color_light</item>
    </style>

    <!-- 登录认领页可点击小号文字样式-->
    <style name="TextContentClick">
        <item name="android:textSize">@dimen/text_size_content_small</item>
        <item name="android:padding">@dimen/page_text_margin</item>
    </style>

    <!-- PayPwdDialog样式-->
    <style name="PayPwdDialog" parent="Base.Animation.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item> //不加这句4.4上边缘会有瑕疵-->
        <!--<item name="android:windowAnimationStyle">@style/MyLoadingDialogAnim</item>-->
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <!--<item name="android:background">@color/transparent</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <!-- ProgressDialog样式-->
    <style name="MyLoadingDialog" parent="Widget.AppCompat.ProgressBar">
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        //不加这句4.4上边缘会有瑕疵
        <!--<item name="android:windowAnimationStyle">@style/MyLoadingDialogAnim</item>-->
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 淡入淡出动画-->
    <style name="MyLoadingDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/progress_dialog_start</item>
        <item name="android:windowExitAnimation">@anim/progress_dialog_close</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyPopupWindowAnim" parent="Animation.AppCompat.DropDownUp"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
