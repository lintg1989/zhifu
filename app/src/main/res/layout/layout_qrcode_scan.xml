<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        app:inner_scan_speed="30"
        app:inner_scan_iscircle="false"
        app:inner_width="@dimen/qrcode_scan_view_width"
        app:inner_height="@dimen/qrcode_scan_view_width"
        app:inner_corner_length="@dimen/qrcode_scan_corner_length"
        app:inner_corner_width="@dimen/qrcode_scan_corner_width"
        app:inner_margintop="@dimen/qrcode_scan_padding_top"
        app:inner_scan_bitmap="@mipmap/scan_bitmap"
        app:inner_corner_color="@color/total_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>