<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/layout_click_selector"
    android:paddingTop="@dimen/find_item_padding_vertical"
    android:paddingBottom="@dimen/find_item_padding_vertical"
    android:paddingLeft="@dimen/find_item_padding_horizontal"
    android:paddingRight="@dimen/find_item_padding_horizontal"
    android:layout_marginBottom="@dimen/find_item_divide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_item_find_title"
        style="@style/TextContentDark"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/find_item_padding_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_item_find_pic"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
